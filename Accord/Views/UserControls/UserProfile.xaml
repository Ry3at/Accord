<UserControl x:Class="Accord.Views.UserControls.UserProfile"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Accord.Views.UserControls"
             mc:Ignorable="d" 
             Name="Uc"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="11" />
        </Grid.RowDefinitions>
        <Image Name="Image" Margin="10 20 10 10"
               Width="{Binding Path=(Image.Height)}"
               MaxHeight="150" MinHeight="150"/>
        <TextBlock HorizontalAlignment="Center" Name="TbName" Grid.Row="1" />
        <Border Background="{DynamicResource TextBrush}" Grid.Row="2" Margin="0 5" />
    </Grid>
</UserControl>
